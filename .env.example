# ================================
# Configuración de Entorno - Producción
# ================================

# Entorno de Node.js
NODE_ENV=production

# Puerto de la aplicación
PORT=3000

# Hostname (0.0.0.0 para Docker)
HOSTNAME=0.0.0.0

